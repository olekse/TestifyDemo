<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_subject"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardBackground"
        >

        <TextView
            android:id="@+id/student_surnameTextField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:text="Surname"
            android:textSize="18sp"
            android:textStyle="bold"
            card_view:layout_constraintLeft_toRightOf="@+id/student_name_textField"
            card_view:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/student_name_textField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/student_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:maxHeight="65dp"
            android:maxWidth="65dp"
            android:minHeight="65dp"
            android:minWidth="65dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:id="@+id/student_email_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="19dp"
            android:text="Email"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintRight_toLeftOf="@+id/student_image"/>

        <TextView
            android:id="@+id/student_group_code_name"
            android:layout_width="79dp"
            android:layout_height="17dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="12dp"
            android:text="Group Name"
            android:textSize="13sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintLeft_toRightOf="@+id/groupLabel"/>

        <TextView
            android:id="@+id/groupLabel"
            android:layout_width="42dp"
            android:layout_height="17dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="12dp"
            android:text="Group:"
            android:textSize="13sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintLeft_toLeftOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>