<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/cardBackground">

        <!--

        question =  (TextView) v.findViewById(R.id.task_card_question);
        correctAnswer =  (TextView) v.findViewById(R.id.task_card_correct_answer);
        numberOfAnswers =  (TextView) v.findViewById(R.id.task_card_number_of_answers);
        -->

        <TextView
            android:id="@+id/task_card_question_W"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="Question"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintLeft_toRightOf="@+id/textView3awdawd"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/task_card_correct_answer_W"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="Correct Answer"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            card_view:layout_constraintLeft_toRightOf="@+id/textView2aergaer"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/task_card_question_W"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/task_card_number_of_answers_W"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_margin="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="NumAnswers"
            android:textSize="13dp"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textView2aergaer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Answer"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/textView3awdawd"/>

        <TextView
            android:id="@+id/textView3awdawd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Question:"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>